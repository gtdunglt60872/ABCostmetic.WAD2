        <dt>
            @Html.DisplayNameFor(model => model.Customer.CompanyName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.CompanyName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Employee.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Employee.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Shipper.CompanyName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Shipper.CompanyName)
        </dd>

    </dl>

    <h3>Order detail</h3>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Product</th>
                <th>Unit price</th>
                <th>Quanlity</th>
                <td>Discount</td>
                <td>Sub-total</td>
            </tr>
        </thead>
        @foreach (var item in Model.Order_Details)
        {
            <tr>
                <td>@item.Product.ProductName</td>
                <td>@item.UnitPrice.ToString("C")</td>
                <td>@item.Quantity</td>
                <td>@item.Discount.ToString("p1")</td>
                <td>@(item.UnitPrice * item.Quantity)</td>
            </tr>
        }

        <tr>
            <td colspan="3"></td>
            <td>
                <strong>Total</strong>
            </td>
            <td>
                <strong>@Model.Order_Details.Sum(x => x.UnitPrice * x.Quantity).ToString("c")</strong>
            </td>
        </tr>
    </table>
</div>
<hr />
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.OrderID }) |
